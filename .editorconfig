root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

[*.{json,jsonc}]
indent_size = 2
max_line_length = 80

[*.md]
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf
